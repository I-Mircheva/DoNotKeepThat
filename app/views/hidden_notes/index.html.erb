<p id="notice"><%= notice %></p>

<h1>Hidden Notes</h1>

<table>
  <thead>
    <tr>
      <th>Your note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hidden_notes.each do |hidden_note| %>
      <tr>
        <td><%= hidden_note.your_note %></td>
        <td><%= link_to 'Show', hidden_note %></td>
        <td><%= link_to 'Edit', edit_hidden_note_path(hidden_note) %></td>
        <td><%= link_to 'Destroy', hidden_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hidden Note', new_hidden_note_path %>
